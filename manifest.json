{
  "manifest_version": 3,
  "version": "0.6.1",
  "action": {
    "default_popup": "html/popup.html"
  },
  "icons": {
    "16": "./img/icons/icon16.png",
    "32": "./img/icons/icon32.png",
    "48": "./img/icons/icon48.png"
  },
  "permissions": [
    "storage", "declarativeNetRequest", "activeTab", "tabs", "notifications", "declarativeContent"

  ],
   "background": {
    "service_worker": "js/background.js"
  },
  "name": "Расширение Jetlend",
  "description": "Позволяет быстро распределить средства, убирает НПД из статистики, показывает чистую доходность, считает XIRR.",
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["js/global/functions.js", "js/content.js"]
    }
  ]
}